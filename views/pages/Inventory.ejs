<%- include('../templates/header.ejs'); %>
    <script src="../../routes/Admin.js"></script>
    <script src="jquery-3.5.1.min.js"></script>

    <body>
        <div class="container-fluid dd">
            <nav style="margin-bottom:0;" class="navbar navbar-expand-lg navbar-dark bg-trans">
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                    aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarColor01">
                    <ul class="navbar-nav mr-auto">
                        <li class="nav-item active">
                            <a class="nav-link" href="/Admin">Home <span class="sr-only">(current)</span></a>
                        </li>
                    </ul>
                   
                    <img style="width: 1%;margin-left: 2%;" src="../../images/user.svg">
                    <p class="nav-item nav-link">
                        <%=UserName%>
                    </p>
                    <a style="width:1% ;" href="/"><img style="width: 150%;" src="../../images/log-out.png"></a>

                </div>
            </nav>
            <table style="display: none;" class="table table-bordered  table-bg">
                <h1 style="color: white; text-align: center; margin-top: 30px; font-size: 50px;">Statistics</h1>
                <tbody>
                    <tr>
                        <td class="hd" scope="row">Total Available samples</td>
                        <td scope="row">
                            <%=numdon%>
                        </td>
                    </tr>
    
                    <%samples.forEach(sample=>{%>
                        <tr>
                            <td class="hd" scope="row">Number Of <%=sample.Blood_Type%> Samples</td>
                            <td scope="row">
                                <%=sample.n%>
                            </td>
                        </tr>
                        <%})%>
                </tbody>
            </table>
            <table style="display: none;" class="table table-bordered  table-bg">
                <h1 style="color: white; text-align: center; margin-top: 30px; font-size: 50px;">Most 3 Donor</h1>
                <tbody>
    
                    <tr>
                        <td class="hd" scope="row">
                            SSN
                        </td>
                        <td class="hd" scope="row">
                            name
                        </td>
                        <td class="hd" scope="row">
                            Phone Number
                        </td>
                    </tr>
                    <%donors.forEach(donor=>{%>
                    <tr>
                        <td scope="row">
                            <%=donor.SSN%>
                        </td>
                        <td scope="row">
                            <%=donor.Fname%> <%=donor.Lname%>
                        </td>
                        <td scope="row">
                            <%=donor.Phone_Num%>
                        </td>
                    </tr>
                <%})%>
                </tbody>
            </table>



            <table style="display: none;" class="table table-bordered  table-bg">
                <h1 style="color: white; text-align: center; margin-top: 30px; font-size: 50px;">Inventory</h1>
                <tbody>
                    <tr>
                        <td class="hd" scope="row">Sample ID</td>
                        <td class="hd">Donor</td>
                        <td class="hd">Blood Group</td>
                        <td class="hd">Date Of Donation</td>
                    </tr>


                    <%Inventory.forEach(row=>{%>
                        <tr>
                            <td scope="row">
                                <%=row.Sample_ID%>
                            </td>
                            <td>
                                <%=row.Fname%>
                            </td>
                            <td>
                                <%=row.Blood_Type%>
                            </td>
                            <td>
                                <%=row.DONATION_DATE%>
                            </td>
                        </tr>
                        <%});%>
                </tbody>
            </table>
         
        </div>

    </body>
    <%- include('../templates/footer.ejs'); %>