<%- include('../templates/header.ejs'); %>

<body>
    <div class="container-fluid dd">
        <nav style="margin-bottom:0;" class="navbar navbar-expand-lg navbar-dark bg-trans">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
                aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor01">
                <ul class="navbar-nav mr-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Admin">Home <span class="sr-only">(current)</span></a>
                    </li>
                </ul>
                <a style="width: 1%;" href="/Notif"><img style="width: 100%;"
                        src="../../images/notification.png"></a>
                <img style="width: 1%;margin-left: 2%;" src="../../images/user.svg">
                <p class="nav-item nav-link"><%=UserName%></p>
                <a style="width:1% ;" href="/"><img style="width: 150%;" src="../../images/log-out.png"></a>

            </div>
        </nav>
        <table style="display: none;" class="table table-bordered  table-bg">
            <h1 style="color: white; text-align: center; margin-top: 30px; font-size: 50px;">Donations Requests Total (<%=total.n%>)</h1>
            <tbody>
                <tr>
                    <td class="hd" scope="row">ID</td>
                    <td class="hd">Name</td>
                    <td class="hd">Blood Group</td>
                    <td class="hd">Confirmation</td>
                </tr>
                <%Donations.forEach(row=>{%>
                <tr>
                    <td  scope="row"><%=row.ID%></td>
                    <td><%=row.Fname%></td>
                    <td><%=row.Blood_Type%></td>
                    <td><a href = "/Admin/Tests"><button style="width: 50%;font-size: 30px;" class="btn btn-danger ">Confirm</button></a></td>
                </tr>
                <% });%>
            </tbody>
        </table>


    </div>


</body>
<%- include('../templates/footer.ejs'); %>
