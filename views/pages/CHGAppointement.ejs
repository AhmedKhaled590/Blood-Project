<%- include('../templates/header.ejs'); %>
  <style>
    .fadeIn {
      transition-duration: 100s;
    }
  </style>

  <body>
    <div class="container-fluid dd animated fadeIn">
      <nav style="margin:0;" class="navbar navbar-expand-lg navbar-dark bg-trans">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor01"
          aria-controls="navbarColor01" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse" id="navbarColor01">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/home">Home <span class="sr-only">(current)</span></a>
            </li>
          </ul>
          <a style="width: 1%;" href="/Notif"><img style="width: 100%;" src="../../images/notification.png"></a>
          <img style="width: 1%;margin-left: 2%;" src="../../images/user.svg">
          <p class="nav-item nav-link">User Name</p>
          <a style="width:1% ;" href="/"><img style="width: 150%;" src="../../images/log-out.png"></a>

        </div>
      </nav>
      <table class="table table-bordered animated fadeInDownBig table-bg">
        <h1 style="color: white; text-align: center; margin-top: 30px; font-size: 50px;">Change\Cancel Appointenent</h1>
        <tbody>
          <tr>
            <td class="hd" scope="row">Order ID</td>
            <td class="hd">Appointement</td>
            <td class="hd">Action</td>
          </tr>
          <%if (typeof res!='undefined'){%>
          <tr>
            <td scope="row"><%=res.ID%></td>
            <td scope="row"><%=res.DETERMINED_DATE%></td>
            <td>
              <button
                style="font-size: 30px; background-color: rgb(102, 5, 5); color:white; display: inline;padding: 15px;"
                type="button" class="btn btn-danger" data-toggle="modal" data-target="#Change"
                data-whatever="@mdo">Change Appointement</button>
              <button
                style="font-size: 30px; background-color: rgb(102, 5, 5); color:white; display: inline;padding: 15px;"
                type="button" class="btn btn-danger" data-toggle="modal" data-target="#Cancel"
                data-whatever="@mdo">Cancel Appointement</button>
            </td>

          </tr>
        <%}%>
        </tbody>
      </table>


    </div>
    <div style="font-size:30px ;" class="modal fade" id="Change" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 style="font-size:35px ;" class="modal-title" id="exampleModalLabel">Change Appointement</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/Home/changeappointment" method="POST">
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Are you sure you want to request changing your
                  date?</label>
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-danger">Request</button>
          </div>
          </form>
        </div>
      </div>
    </div>


    <div style="font-size:30px ;" class="modal fade" id="Cancel" tabindex="-1" role="dialog"
      aria-labelledby="exampleModalLabel" aria-hidden="true">
      <div class="modal-dialog" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 style="font-size:35px ; class=" modal-title" id="exampleModalLabel">Cancel Appointement</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <div class="modal-body">
            <form action="/Home/changeappointment" method="POST">
              <div class="form-group">
                <label for="recipient-name" class="col-form-label">Are you sure you want to cancel your date?</label>
                <input type="text" name="cancel" value="canc" style="display: none;">
              </div>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            <button type="submit" class="btn btn-danger">Request</button>
          </div>
          </form>


        </div>
      </div>
    </div>

  </body>
  <%- include('../templates/footer.ejs'); %>